@model List<_6.Models.Product>

<h2>Введіть інформацію про товари</h2>
<form asp-action="ProductForm" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label>Назва товару</label>
            <input asp-for="@Model[i].Name" />
            <label>Кількість</label>
            <input asp-for="@Model[i].Quantity" type="number" />
        </div>
    }
    <button type="submit">Підтвердити</button>
</form>